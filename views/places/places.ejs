<% include ../partials/header %>
    
    <div class = "container">
            <header class = "jumbotron">
                <div class = "container">     
                    <h1>Welcome to Hyderabad</h1>
                    <p>Here are all the <%= name %></p>
                </div>
            </header> 
            
            <!--places is coming from app.js where ref = 1 -->
                        
        <div class ="row text-center" style= "display: flex; flex-wrap: wrap">
            <% places.forEach(function(place){ %>
                <div class ="col-md-3 col-sm-6">
                    <div class = "thumbnail spthumbnail">
                        <img src = "<%= place.url %>">
                    <div class="caption">
                        <h4><%= place.name %></h4>
                    </div>
                        <a href = "<%= url %>/<%= place._id %>" class = "btn btn-primary">More Info</a>
                    </div>
                    
                </div>
            <% }); %>
        </div>    
    </div>
<% include ../partials/footer %>

