<% include ../partials/header %>

<div class = "container">
    <div class = "row">
        <h1 style = " text-align: center; margin: 25px auto">Edit <%= place.name %> </h1>
                
        <div  style = "width: 30%; margin: 0 auto">
            
                    <!-- Sending form data to Update Campground -->
            <form action = "<%= url %>/<%=place._id %>?_method=PUT" method = "POST">
            <div class = "form-group">
                <input class = "form-control" type = "text" value = "<%= place.name %>" name = "place[name]">
            </div>
            <div class = "form-group">
                <input class = "form-control" type = "text" value = "<%= place.url %>" name = "place[url]">
            </div>
             <div class = "form-group">
                <input class = "form-control" type = "text" value = "<%= place.description %>" name = "place[description]">
            </div>
            <div class = "form-group">
                <input class = "btn btn-lg btn-primary btn-block" type= "submit">
            </div>
        </form>    
        </div>
        
    </div>
</div>

<% include ../partials/footer %>