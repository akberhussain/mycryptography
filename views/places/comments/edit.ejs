<% include ../../partials/header %>

<div class = "container">
    <div class = "row">
        <h1 style = " text-align: center; margin: 25px auto">Edit Comment</h1>
                
        <div  style = "width: 30%; margin: 0 auto">
            
                        <!-- Editing Comments sending data to put route and Update -->
                        
            <form action = "<%= url %>/<%= place_id %>/comments/<%= comment._id%>?_method=PUT" method = "POST">
            
            <div class = "form-group">
                <input class = "form-control" type = "text" value = "<%= comment.text %>" name = "comment[text]">
            </div>
            

            <div class = "form-group">
                <input class = "btn btn-lg btn-primary btn-block" type= "submit">
            </div>
        </form>    
        </div>
        
    </div>
</div>

