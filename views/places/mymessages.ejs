<% include ../partials/header %>
    
    <div class = "container">
            <header class = "jumbotron">
                <div class = "container">     
                    <h1>Welcome to Hyderabad</h1>
                    <p>Messages</p>
                </div>
            </header> 
            
            <!--places is coming from app.js where ref = 1 -->
        <div class="container-fluid">
            <div class="row">
                

                <div class="col-lg-12">
                    <table class = "table table-striped table-bordered table-hover table-responsive box-shadow-table">

                        <thead class = "thead-inverse">
                            <% messages.forEach(function(message){ %>
                                <% if(message.reciever.id == currentUser.id){ %>
                              <tr>
                                <th class = "tablehead"><div class="media">
                                  <img class="mr-3 mediaImage" src="images/facebook-default.jpg" alt="Generic placeholder image">
                                  <div class="media-body">
                                    <h4 class="mt-0"><%= message.author.username %></h4>
                                  </div>
                                </div>                          
                                </th>
                                 <td>
                                    <% if(message.givenKey === message.key){ %>
                                      <strong><%= message.message %></strong>
                                      <form>
                                      <!-- <input type="text" name="decrKey"> -->
                                      <div class="form-group">
                                      <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name = "reply" placeholder = "Reply <%= message.author.username %>">
                          <!--             <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
                                    </div>
                                      <button class = "btn btn-success">Reply</button>
<!--                                       <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal">Decrypt Message</button> -->
  
                                    </form>
                                    <% } %>
                                  <% if(message.givenKey != message.key){ %>
                                      <strong>f8e9ddf36000458c598ef663fb8fd6b4</strong>
                                    

                                    <form action="/decryptMessage/<%= message._id%>" method = "post">
                                      <!-- <input type="text" name="decrKey"> -->
                                      <div class="form-group">
                                      <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name = "decrKey" placeholder = "This Messsage Is Encripted, Enter Decription Key to View">
                          <!--             <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
                                    </div>
                                      <button class = "btn btn-success">Decrypt Message</button>
<!--                                       <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal">Decrypt Message</button> -->
  
                                    </form>
                                  <% } %>
                                    <span class= "pull-right"><em><%=message.created.toDateString()%></em></span>
                                 </td>

                                  </tr>
<!--                                   <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                  <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                      <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">This Message Says</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                          <span aria-hidden="true">&times;</span>
                                        </button>
                                      </div>
                                    
                                      <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary">Save changes</button>
                                      </div>
                                    </div>
                                  </div>
                                </div> -->
                              <% } %>

                            <% }) %>
                        </thead>
                        <tbody>
                            <tr></tr>
                        </tbody>    
                    </table>        

                </div>

            </div>
        </div>      

    </div>
<% include ../partials/footer %>

